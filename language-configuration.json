{
    "comments": {
        "lineComment": "#"
    },
    "brackets": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"]
    ],
    "autoClosingPairs": [
        { "open": "{", "close": "}", "notIn": ["comment"]},
        { "open": "[", "close": "]", "notIn": ["comment"]},
        { "open": "(", "close": ")", "notIn": ["comment"]},
        { "open": "'", "close": "'", "notIn": ["string", "comment"]},
        { "open": "\"", "close": "\"", "notIn": ["string"] },
        { "open": "`", "close": "`", "notIn": ["string", "comment"]}
    ],
    "surroundingPairs": [
        ["{", "}"],
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""],
        ["'", "'"],
        ["`", "`"]
    ],
    "autoCloseBefore": ";:.,=}])> \n\t",
    "indentationRules": {
        "increaseIndentPattern": "^\\s*((agarra por)|(ponele que)|(oSi).*(\\(|\\{|\\[|(tonce)))|((aLoSumo)\\b.*)\\s*$",
        "decreaseIndentPattern": "^\\s*(\\b(hastaaca)\\b)|\\)|\\}|\\]"
    }
}